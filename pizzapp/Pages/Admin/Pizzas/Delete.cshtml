@page
@model pizzapp.Pages.Admin.Pizzas.DeleteModel

@{
    ViewData["Title"] = "Supprimer une pizza";
}

<h1>@ViewData["Title"]</h1>

<h3>Es-tu sûr de vouloir supprimer cette pizza ?</h3>
<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Vegan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Vegan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pizza.Ingredients)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pizza.Ingredients)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Pizza.PizzaId" />
        <input type="submit" value="Supprimer" class="btn btn-danger" /> |
        <a asp-page="./Index">Retour à la liste</a>
    </form>
</div>
